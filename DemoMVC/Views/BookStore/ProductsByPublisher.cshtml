@model IEnumerable<DemoMVC.Models.Book>

@{
    ViewBag.Title = "ProductsByPublisher";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>ProductsByPublisher</h2>

<!-- products by publisher -->
<div class="content_top">
    <div class="heading">
        <h3>San pham theo nha xuat ban</h3>
    </div>
    <div class="see">
        <p><a href="#">See all Products</a></p>
    </div>
    <div class="clear"></div>
</div>
<div class="section group">
    @foreach (var item in Model)
    {
        <div class="grid_1_of_4 images_1_of_4">
            <a href="@Url.Action("Detail", "BookStore", new { id = item.Id})"><img src="~/images/@item.CoverImage" alt="" /></a>
            <h2>@item.Name </h2>
            <div class="price-details">
                <div class="price-number">
                    <p><span class="rupees">@item.Price</span></p>
                </div>
                <div class="add-cart">
                    <h4><a href="preview.html">Add to Cart</a></h4>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    }
</div>

