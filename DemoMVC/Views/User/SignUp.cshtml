@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>SignUp</h2>

<table>
    <h2 style="text-align:center">Dang ky thanh vien </h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken() // ma chong request gia mao
        <tr style="height: 40px">
            <td>Ho ten khach hang: </td>
            <td>
                @Html.TextBox("Name")
                @ViewData["Error1"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Ho ten dang nhap: </td>
            <td>
                @Html.TextBox("Account")
                @ViewData["Error2"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Mat khau: </td>
            <td>
                @Html.Password("Password")
                @ViewData["Error3"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Nhap lai mat khau: </td>
            <td>
                @Html.Password("Re-EnterPassword")
                @ViewData["Error4"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Dia chi: </td>
            <td>
                @Html.TextBox("Address")
                @ViewData["Error5"]
            </td>
        </tr>

        <tr style="height: 40px">
            <td>Email: </td>
            <td>
                @Html.TextBox("Email")
                @ViewData["Error6"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Dien thoai: </td>
            <td>
                @Html.TextBox("CellPhone")
                @ViewData["Error7"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td>Ngày sinh: </td>
            <td>
                <input type="date" name="Birthday" />
            </td>
        </tr>
        <tr style="height: 40px">
            <td>
                <input type="submit" value="Dang ky" />
            </td>
        </tr>
    }
</table>

